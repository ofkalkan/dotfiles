[module/spotify]
type = custom/script
interval = 1
format-prefix = "%{F#1DB954}ï€%{F-} "
format = <label>
exec = sh ~/.config/polybar/scripts/spotify.sh -i "%artist%{F#ebdbb2}:%{F-} %title" -e " "
exec-if = pgrep -x spotify

[module/spotify-prev]
